@model Product
<div class="pb-3">
<form method = "post">
    <div class="border p-3 mt-4">
        <h2 class="text-primary pb-2">
            Create Product
        </h2>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3 row p-1">
        <label asp-for="Title" class="p1"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Description" class="p1"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="ISBN" class="p1"></label>
        <input asp-for="ISBN" class="form-control" />
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Author" class="p1"></label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="ListPrice" class="p1"></label>
        <input asp-for="ListPrice" class="form-control" />
        <span asp-validation-for="ListPrice" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Price" class="p1"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Price50" class="p1"></label>
        <input asp-for="Price50" class="form-control" />
        <span asp-validation-for="Price50" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Price100" class="p1"></label>
        <input asp-for="Price100" class="form-control" />
        <span asp-validation-for="Price100" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-6 col-md-3">
    <button type="submit" class="btn btn-primary form-control" >Create</button>
    </div>
    <div class="col-6 col-md-3">
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
    </div>
    </div>
</form>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}